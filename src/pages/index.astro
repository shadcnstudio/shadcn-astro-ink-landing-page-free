---
import '@/styles/global.css'

import Layout from '@/layouts/Layout.astro'

import ThemeToggle from '@/components/theme-toggle'

// Page-specific SEO configuration
const pageTitle = 'Master Astro Template - Build Modern, Fast Websites'
const pageDescription =
  'Create lightning-fast, SEO-optimized websites with our Astro template featuring shadcn/ui components and Tailwind CSS. Perfect for developers building modern web applications.'
const pageKeywords =
  'astro template, shadcn ui, tailwind css, react components, seo optimized, web development, static site generator, modern web apps'

// Structured data for better SEO
const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: 'Master Astro Template',
  description: pageDescription,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  author: {
    '@type': 'Organization',
    name: 'Your Company Name'
  }
}
---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords} schema={schema}>
  <!-- Main Content with semantic HTML -->
  <ThemeToggle client:load />
  <main id='main-content' class='w-full flex-1'>
    <!-- Hero Section -->
    <section class='container mx-auto px-4 py-16 md:py-24 lg:py-32' aria-labelledby='hero-heading'>
      <div class='mx-auto max-w-4xl text-center'>
        <h1 id='hero-heading' class='mb-6 text-4xl font-bold tracking-tight md:text-5xl lg:text-6xl'>
          Build Lightning-Fast Websites with Astro
        </h1>
        <p class='text-muted-foreground mb-8 text-lg leading-relaxed md:text-xl'>
          A production-ready template combining Astro's performance, shadcn/ui's beautiful components, and Tailwind
          CSS's utility-first approach. Start building your next project with confidence.
        </p>
        <div class='flex flex-col items-center justify-center gap-4 sm:flex-row'>
          <a
            href='#features'
            class='bg-primary hover:bg-primary/90 focus:ring-primary inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium text-white transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none'
            aria-label='Explore features of Master Astro Template'
          >
            Get Started
          </a>
          <a
            href='https://github.com/yourusername/master-astro-template'
            class='text-primary bg-secondary hover:bg-secondary/80 focus:ring-primary inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none'
            aria-label='View source code on GitHub'
            rel='noopener noreferrer'
            target='_blank'
          >
            View on GitHub
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id='features' class='container mx-auto px-4 py-16 md:py-24' aria-labelledby='features-heading'>
      <h2 id='features-heading' class='mb-12 text-center text-3xl font-bold md:text-4xl'>Why Choose This Template?</h2>
      <div class='mx-auto grid max-w-6xl gap-8 md:grid-cols-2 lg:grid-cols-3'>
        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>‚ö° Lightning Fast</h3>
          <p class='text-muted-foreground'>
            Built with Astro's island architecture for optimal performance. Zero JavaScript by default, ship only what
            you need.
          </p>
        </article>

        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>üé® Beautiful UI</h3>
          <p class='text-muted-foreground'>
            Leverage shadcn/ui components with Tailwind CSS for stunning, accessible interfaces out of the box.
          </p>
        </article>

        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>üîç SEO Optimized</h3>
          <p class='text-muted-foreground'>
            Comprehensive SEO implementation with metadata, structured data, and semantic HTML for maximum visibility.
          </p>
        </article>

        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>‚ôø Accessible</h3>
          <p class='text-muted-foreground'>
            Built with accessibility in mind. WCAG compliant components and proper ARIA labels throughout.
          </p>
        </article>

        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>üì± Responsive</h3>
          <p class='text-muted-foreground'>
            Mobile-first design that looks perfect on any device. Tested across all major browsers and screen sizes.
          </p>
        </article>

        <article class='bg-card text-card-foreground rounded-lg border p-6 shadow-sm'>
          <h3 class='mb-3 text-xl font-semibold'>üõ†Ô∏è Developer Friendly</h3>
          <p class='text-muted-foreground'>
            TypeScript support, ESLint configuration, and modern tooling for an excellent development experience.
          </p>
        </article>
      </div>
    </section>

    <!-- CTA Section -->
    <section class='container mx-auto px-4 py-16 md:py-24' aria-labelledby='cta-heading'>
      <div class='bg-muted mx-auto max-w-3xl rounded-lg p-8 text-center md:p-12'>
        <h2 id='cta-heading' class='mb-4 text-3xl font-bold md:text-4xl'>Ready to Build Something Amazing?</h2>
        <p class='text-muted-foreground mb-8 text-lg'>
          Start your next project with a solid foundation. Clone the repository and launch your site in minutes.
        </p>
        <a
          href='https://github.com/yourusername/master-astro-template'
          class='bg-primary hover:bg-primary/90 focus:ring-primary inline-flex items-center justify-center rounded-md px-8 py-4 text-lg font-medium text-white transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none'
          aria-label='Get started with Master Astro Template'
          rel='noopener noreferrer'
          target='_blank'
        >
          Get Started Now
        </a>
      </div>
    </section>
  </main>

  <!-- Footer with semantic HTML -->
  <footer class='w-full border-t' role='contentinfo'>
    <div class='container mx-auto px-4 py-8'>
      <div class='flex flex-col items-center justify-between gap-4 md:flex-row'>
        <p class='text-muted-foreground text-sm'>
          ¬© {new Date().getFullYear()} Master Astro Template. Built with <span aria-label='love'>‚ù§Ô∏è</span> using Astro.
        </p>
        <nav aria-label='Footer navigation'>
          <ul class='flex gap-6'>
            <li>
              <a
                href='/privacy'
                class='text-muted-foreground hover:text-foreground text-sm transition-colors'
                aria-label='View privacy policy'
              >
                Privacy
              </a>
            </li>
            <li>
              <a
                href='/terms'
                class='text-muted-foreground hover:text-foreground text-sm transition-colors'
                aria-label='View terms of service'
              >
                Terms
              </a>
            </li>
            <li>
              <a
                href='/contact'
                class='text-muted-foreground hover:text-foreground text-sm transition-colors'
                aria-label='Contact us'
              >
                Contact
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </footer>
</Layout>
